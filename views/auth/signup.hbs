<h1>Sign up</h1>
<form action="/auth/signup" method="POST">
   <label> Full name:
      <input type="text" name="fullName">
   </label>
   <label> Password:
      <input type="password" name="password">
   </label>
   <label> Email:
      <input type="email" name="email">
   </label>

   <button type="submit">Submit</button>
</form>

{{#if errorMessage}}
   {{errorMessage}}
{{/if}}

<br>
<a href="/">Go back</a>